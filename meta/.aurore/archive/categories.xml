<category-schemes>
  <category-scheme key="workflow-module" var="" >
    <var>
      <eval>item["api"]["cmd"]["path"].split(os.path.sep)[1]</eval>
    </var>
    <map>
      <str key="createBIM"                      >Building</str>
      <str key="createEDP"                      >EDP</str>
      <str key="createEVENT"                    >Event</str>
      <str key="createSAM"                      >Structural Model</str>
      <str key="performDL"                      >Damage and Loss</str>
      <str key="performRegionalEventSimulation" >Regional Event</str>
      <str key="performRegionalMapping"         >Regional Mapping</str>
      <str key="performSIMULATION"              >Simulation</str>
      <str key="performUQ"                      >Uncertainty</str>
    </map>
  </category-scheme>
  
  <category-scheme key="workflow-type" var="" >
    <var>
      <eval id="workflow_types" >{
        "wind-events": [
          "bknd-0010", # LowRiseTPU
          "bknd-0011", # WindTunnelExperiment
        ],
        "earthquake-events": [
          "bknd-0006",
        ],
        "qfem-events": [
        ]
      }</eval>

      <eval>\
        "wind-event" \
          if item["id"] in workflow_types["wind-events"] \
        else "earthquake-event" \
          if item["id"] in workflow_types["earthquake-events"] \
        else "qfem-event" \
          if item["id"] in workflow_types["qfem-events"] \
        else "-" \
      </eval>
    </var>
    <map>
      <str key="wind-event"        >Wind Event</str>
      <str key="earthquake-event"  >Earthquake Event</str>
      <str key="-"></str>
    </map>
  </category-scheme>

